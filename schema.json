{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/midorimici/gentestcase/internal/model/data",
  "$ref": "#/$defs/Data",
  "$defs": {
    "Conditions": {
      "patternProperties": {
        "^\\w+$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Data": {
      "properties": {
        "elements": {
          "$ref": "#/$defs/Elements",
          "title": "Elements"
        },
        "conditions": {
          "$ref": "#/$defs/Conditions",
          "title": "Conditions",
          "description": "Condition variables"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "elements"
      ]
    },
    "Element": {
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Outputted element name"
        },
        "options": {
          "patternProperties": {
            "^\\w+$": {
              "$ref": "#/$defs/Option"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "title": "Options"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "options"
      ]
    },
    "Elements": {
      "patternProperties": {
        "^\\w+$": {
          "$ref": "#/$defs/Element"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Option": {
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Outputted option name"
        },
        "if": {
          "type": "string",
          "description": "Condition to output the option",
          "examples": [
            "element1.option_id \u0026\u0026 !element2.option_id"
          ]
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    }
  }
}